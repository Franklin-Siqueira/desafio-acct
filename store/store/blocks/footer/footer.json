{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": ["flex-layout.row#footer-desktop"]
  },

  "flex-layout.row#footer-desktop": {
    "children": [
      "flex-layout.col#footer-GPTW-logo-desktop",
      "flex-layout.col#footer-logo-social-desktop",
      "flex-layout.col#footer-places-brazil-desktop",
      "flex-layout.col#footer-places-spain-desktop",
      "flex-layout.col#footer-places-us-desktop"
    ],
    "props": {
      "blockClass": "credits",
      "paddingTop": 8,
      "paddingBottom": 8
    }
  },

  "flex-layout.col#footer-GPTW-logo-desktop": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": ["logo#GPTW"]
  },
  "logo#GPTW": {
    "props": {
      "title": "Logo GPTW Stamp",
      "href": "/",
      "url": "assets/selo-gptw-2021.svg",
      "width": "100"
    }
  },

  "flex-layout.col#footer-logo-social-desktop": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "flex-layout.row#footer-logo-desktop",
      "flex-layout.row#footer-social-desktop",
      "flex-layout.row#footer-email-desktop"
    ]
  },
  "flex-layout.row#footer-logo-desktop": {
    "props": {
      "verticalAlign": "middle",
      "horizontalAlign": "middle"
    },
    "children": ["logo#acct"]
  },
  "logo#acct": {
    "props": {
      "title": "Logo ACCT",
      "href": "/",
      "url": "assets/logo-acct-black.svg",
      "width": "145"
    }
  },
  "flex-layout.row#footer-social-desktop": {
    "props": {
      "verticalAlign": "middle",
      "horizontalAlign": "center"
    },
    "children": ["social-networks"]
  },
  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Linkedin",
          "url": "https://www.linkedin.com/company/acctglobal/"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/channel/UCv-y0Z8ZIu6kP-MpebdIVZA"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/acct.global"
        }
      ]
    }
  },
  "flex-layout.row#footer-email-desktop": {
    "props": {
      "verticalAlign": "middle",
      "horizontalAlign": "center"
    },
    "children": ["rich-text#footer-email"]
  },
  "rich-text#footer-email": {
    "props": {
      "text": "contato@acct.global",
      "blockClass": "footer",
      "font": "Open Sans Condensed"
    }
  },

  "flex-layout.col#footer-places-brazil-desktop": {
    "props": {
      "verticalAlign": "top"
    },
    "children": ["rich-text#footer-brazil"]
  },
  "flex-layout.col#footer-places-us-desktop": {
    "props": {
      "verticalAlign": "top"
    },
    "children": ["rich-text#footer-spain"]
  },
  "flex-layout.col#footer-places-spain-desktop": {
    "props": {
      "verticalAlign": "top"
    },
    "children": ["rich-text#footer-us"]
  },
  "rich-text#footer-brazil": {
    "props": {
      "text": "**BRAZIL** \n \n Al. Prof. Lucas Nogueira \n Garcez, 1395 \n Atibaia - SP \n \n Av. das Nações Unidas, 11.857 - 8º Andar \n Brooklin \n São Paulo - SP",
      "blockClass": "footer"
    }
  },
  "rich-text#footer-spain": {
    "props": {
      "text": "**SPAIN** \n \n Carrer Provença, 339 \n 08037 - Barcelona",
      "blockClass": "footer"
    }
  },
  "rich-text#footer-us": {
    "props": {
      "text": "**UNITED STATES** \n \n 12 East 49th Street \n NY \n 10017 - New York",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": ["flex-layout.row#footer-mobile-row-1"]
  },
  "flex-layout.row#footer-mobile-row-1": {
    "children": ["flex-layout.row#footer-mobile-row-1-col-1"],
    "props": {
      "blockClass": "credits",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.row#footer-mobile-row-1-col-1": {
    "children": [
      "flex-layout.col#footer-GPTW-stamp-mobile",
      "flex-layout.col#footer-logo-mobile"
    ],
    "props": {
      "blockClass": "credits",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 1,
      "colGap": 1
    }
  },
  "flex-layout.col#footer-GPTW-stamp-mobile": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": ["logo#GPTW-mobile"]
  },
  "logo#GPTW-mobile": {
    "props": {
      "title": "Logo GPTW Stamp",
      "href": "/",
      "url": "assets/selo-gptw-2021.svg",
      "width": "100"
    }
  },
  "flex-layout.col#footer-logo-mobile": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": ["logo#acct-mobile"]
  },
  "logo#acct-mobile": {
    "props": {
      "title": "Logo ACCT",
      "href": "/",
      "url": "assets/logo-acct-black.svg",
      "width": "100"
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "And all stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
